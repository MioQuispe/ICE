{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "esnext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "vite/client",
      "vitest/globals"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "@effect/language-service"
      },
      {
        "name": "typescript-plugin-effect"
      }
    ]
  },
  "include": [
    "src/index.ts",
    "src/cli/**/*.tsx"
  ],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*",
  ],
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc-experimental"
  }
}
