{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "strict": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "packages/react/src/*",
    "packages/svelte/src/*",
    "packages/client/src/*",
    "packages/client/src/providers/*"
  ],
  "exclude": ["node_modules", "**/dist/**", "**/node_modules/**"],
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc-experimental"
  }
}
